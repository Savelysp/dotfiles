# Перезапуск sxhkd
super + ctrl + s
    pkill -USR1 -x sxhkd

# Скрыть Polybar
super + p
	sh ~/bin/polybar-toggle.sh

# Launch Terminal
super + Return
    alacritty

# Set random wallpaper
super + w
    feh --randomize --no-fehbg --bg-scale $HOME/images/	

# Launch Rofi Menu
super + {d,x}
    {rofi -show drun,sh $HOME/bin/powermenu}

# Launch Applications
super + shift + {f,p,t,e,x,y}
	{firefox, \
	pavucontrol, \
	telegram-desktop, \
	emacsclient -c -a 'emacs', \
	sh $HOME/bin/xcolor-pick, \
	alacritty -e yazi}
     
# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    {wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+, \
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-, \
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    {brightnessctl set +5%, \
    brightnessctl set 5%-}

# screenshot
Print
    flameshot gui

#
#
# BSPWM HOTKEYS
#
#

# quit/restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}

# close and kill
super + c
    bspc node -c

# alternate between the tiled and monocle layout
super + space
	bspc node -t "~"{floating,tiled}


#
# state/flags
#

# ?????????set the window state
super + {t,ctrl + t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}
	

# ????????????Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}
 
#
# focus/swap
#


# ????focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# ??send focus window to current desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# ??????cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# TODO: ДОБАВИТЬ
# Expanding windows
super + control {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0} 

# Send the window to another edge of the screen
super + {_,alt + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# ?????move a floating window
# TODO: Вызывает конфликт с другими комбинациями 
#super + x + {h,j,k,l}
# 	bspc node -v {-20 0,0 20,0 -20,20 0}

# ?????set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# ?????swap the current node and the biggest window
super + g
	bspc node -s biggest.window