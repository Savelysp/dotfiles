set encoding=utf8

set nocompatible

set ignorecase

set smartcase

set hlsearch

set incsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4

set expandtab

set smarttab

set autoindent
set smartindent

set number

set relativenumber

set wildmode=longest,list

syntax on

set mouse=a

set clipboard=unnamedplus

set ttyfast

set so=30

highlight Normal ctermbg=none
highlight NonText ctermbg=none
